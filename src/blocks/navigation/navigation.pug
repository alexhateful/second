//-
    name: navigation
    description: Markup for the navigation block
    arguments:
        - {object} props - block properties

mixin navigation(data = {})
    .navigation&attributes(attributes)
        #nav
            .container
                .row
                    .col-2.nav_logo
                        a(href="#") 
                            img(src="../../img/logo.png", alt="alt")
                    .col-7.nav_menu
                        ul.nav_list
                            each item in data.menu
                                li.nav_links: a(href="#")= item
                    .col-3
                        ul.nav_icons
                            each item in data.icons
                                li: button.btn.btn-nav(type='submit')
                                    i(class=`fas fa-${item}`)